@model CreateGameFormViewModel

@{
    ViewData["Title"] = "AddGame";
}

<h5>
    <i class="bi bi-plus-circle"></i>
    Add Games
</h5>

<form asp-action="Create" asp-controller="Games" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select mt-4" asp-for="CategoryId" asp-items="Model.Categories"
                data-placeholder="Select a Category" data-minimum-results-for-search="Infinity">
                    <option value=""></option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select class="form-select mt-4" asp-for="SelectedDevices" asp-items="Model.Devices" multiple="multiple"
                        data-placeholder="Select a Devices">
                </select>
                <span asp-validation-for="SelectedDevices" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover"
                     data-rule-extension="@FileSettings.AllowedExtensions.Replace(".", "").Replace(",", "|")"
                     data-msg-extension="Not Allowed extensions" />
                <!-- data-rule-filesize="FileSettings.MaxFileSizeInMb"
                  data-msg-filesize="Maximum Allowed Size is FileSettings.MaxFileSizeInBytes MB"  -->
                


                <div>
                <small class="form-text text-muted">Upload a photo.</small>
                </div>
                <span asp-validation-for="Cover" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-dark text-light mt-4">Save</button>
        </div>
        <div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
            <img class="cover-preview d-none" alt="Cover" />
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/js/coverpreview.js" asp-append-version="true"></script>
    <script src="~/js/validationimgsize.js" asp-append-version="true"></script>
}